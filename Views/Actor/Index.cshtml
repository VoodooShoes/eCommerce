@*Define model*@
@model IEnumerable<ActorModel>

@*Define ViewData*@
@{
	ViewData["Title"] = "List of Actors";
}

@*Code*@
<h1 class="actor-header">Actors</h1>

<div class="row">
	<div class="col-md-8 offset-md-2">
		<table class="table">
			<thead>
				<tr class="text-center">
					<th>@Html.DisplayNameFor(model => model.ProfilePictureURL)</th>
					<th>@Html.DisplayNameFor(model => model.FullName)</th>
					<th>@Html.DisplayNameFor(model => model.Bio)</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody class="actor-table">
				@foreach (var item in Model)
				{
				<tr>
					<td class="alert-middle">
						<img class="rounded-circle" src="@item.ProfilePictureURL" alt="@item.FullName" style="max-width: 150px"/>
					</td>
					<td class="alert-middle">
						@Html.DisplayFor(modelItem => item.FullName)
					</td>
					<td class="alert-middle">
						@Html.DisplayFor(modelItem => item.Bio)
					</td>
					<td class="alert-middle">
						<a class="btn btn-Outline-primary text-white" asp-action="Edit" asp-route-id="@item.ActorId"><i class="bi bi-pencil-square">Edit</i></a> |
						<a class="btn btn-Outline-info text-white" asp-action="Details" asp-route-id="@item.ActorId"><i class="bi bi-eye">Details</i></a> |
						<a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@item.ActorId"><i class="bi bi-trash">Delete</i></a>
					</td>
				</tr>
				}
			</tbody>
			<tr>
				<td></td>
			</tr>
		</table>
	</div>
</div>

<div style="position: fixed; right: 25px; bottom: 25px;" class="text-white">
	<a asp-controller="Actor" asp-action="Create" class="btn btn-success"><i class="bg-info bi-plus-circle"></i>Add New</a>
</div>