@*Model*@
@model IEnumerable<ProducerModel>
@*Define ViewData*@
@{
	ViewData["Title"] = "List of Producers";
}

@*Code*@
<h1 class="producer-header">Producers</h1>

<div class="row">
	<div class="col-md-8 offset-md-2">
		<table class="table">
			<thead>
				<tr class="text-center">
					<th>@Html.DisplayNameFor(model => model.ProfilePictureURL)</th>
					<th>@Html.DisplayNameFor(model => model.FullName)</th>
					<th>@Html.DisplayNameFor(model => model.Bio)</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
				<tr>
					<td class="alert-middle">
						<img class="rounded-circle" src="@item.ProfilePictureURL" alt="@item.FullName" style="max-width: 150px"/>
					</td>
					<td class="alert-middle">
						@Html.DisplayFor(modelItem => item.FullName)
					</td>
					<td class="alert-middle">
						@Html.DisplayFor(modelItem => item.Bio)
					</td>
					<td class="alert-middle">
						<a class="btn btn-Outline-primary text-white"><i class="bi bi-pencil-square">Edit</i></a> |
						<a class="btn btn-Outline-info text-white"><i class="bi bi-eye">Details</i></a> |
						<a class="btn btn-danger text-white"><i class="bi bi-trash">Delete</i></a>
					</td>
				</tr>
				}
			</tbody>
			<tr>
				<td></td>
			</tr>
		</table>
	</div>
</div>